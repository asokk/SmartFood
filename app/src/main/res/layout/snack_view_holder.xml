<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/snackImage"
            android:layout_width="48dp"
            android:src="@color/colorAccent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/snackName"
            style="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/snackImage"
            android:layout_toEndOf="@id/snackImage"
            android:layout_height="wrap_content"
            android:text="Snack Name" />

        <TextView
            android:id="@+id/snackIngredients"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/snackImage"
            android:layout_toEndOf="@id/snackImage"
            android:layout_below="@id/snackName"
            android:text="Snack Ingredients" />

        <TextView
            android:id="@+id/snackPrice"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/snackImage"
            android:layout_toEndOf="@id/snackImage"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/snackIngredients"
            android:textColor="@color/colorAccent"
            android:text="R$ %2.2d" />

    </RelativeLayout>
</android.support.v7.widget.CardView>